<section class="section">
  <div class="container">
    <header class="section__title">
        <h2>Event Creation Page</h2>
    </header>

    <div class="card">
      <div class="card__header">

        <%= form_tag "/events", method: :post do %>
          <form class="card__body">
              <div class="form-group m-b-5">
                  <input type="text" name="event_name" class="form-control">
                  <i class="form-group__bar"></i>
                  <label>Event Name</label>
              </div>
              <div class="form-group m-b-5">
                  <input type="text" name="description" class="form-control">
                  <i class="form-group__bar"></i>
                  <label>Description</label>
              </div>
              <div class="form-group m-b-5">
                  <input type="date" name="event_date" class="form-control">
                  <i class="form-group__bar"></i>
                  <label>Date</label>
              </div>
              <div class="form-group m-b-5">
                  <input type="time" name="event_time" class="form-control">
                  <i class="form-group__bar"></i>
                  <label>Time</label>
              </div>
              <div class="form-group m-b-5">
                Restaurant: <%= collection_select :restaurant, :restaurant_id, Restaurant.all, :id, :restaurant_name %>
                <i class="form-group__bar"></i>
              </div>
            <%= submit_tag "Create Event" %>
          </form>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container">
    <header class="section__title">
        <h2>Restaurant Search</h2>
    </header>

    <div class="card">
      <div class="card__header">

        <%= form_tag "/restaurants", method: :get do %>
          <form class="card__body">
              <div class="form-group m-b-5">
                  <input type="text" name="keyword" class="form-control">
                  <i class="form-group__bar"></i>
                  <label>Keyword/Business Name</label>
              </div>
              <div class="form-group m-b-5">
                  <input type="text" name="location" class="form-control">
                  <i class="form-group__bar"></i>
                  <label>City</label>
              </div>
            <%= submit_tag "Find Restaurants" %>
          </form>
        <% end %>
      </div>
    </div>
  </div>
</section>