<h1>New Event Create Page</h1>

<%= form_tag "/events", method: :post do %>
  <div>
    Event Name: <input type="text" name="event_name">
  </div>
  <div>
    Description <input type="text" name="description">
  </div>
  <div>
    Date: <input type="date" name="event_date">
  </div>
  <div>
    Time: <input type="time" name="event_time">
  </div>
  <div>
    Restaurant: <%= collection_select :restaurant, :restaurant_id, Restaurant.all, :id, :restaurant_name %>
  </div>
  </br>
  <input type="submit" value="Submit">
<% end %>