<h1>Edit Event Page </h1>

<%= form_tag "/events/#{@event.id}", method: :patch do %>
  <div>
    Event Name: <input type="text" name="event_name"  value="<%= @event.event_name %>">
  </div>
  <div>
    Description <input type="text" name="description" value="<%= @event.description %>">
  </div>
  <div>
    Date: <input type="date" name="event_date" value="<%= @event.event_date %>">
  </div>
  <div>
    Time: <input type="time" name="event_time" value="<%= @event.event_time %>">
  </div>
  <div>
    Restaurant: <%= collection_select :restaurant, :restaurant_id, Restaurant.all, :id, :restaurant_name %>
  </div>
  </br>
  <input type="submit" value="Save">
<% end %>