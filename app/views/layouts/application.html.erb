<!DOCTYPE html>
<html>
  <head>
    <title>Capstone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    

    <nav class="navbar navbar-expand-lg navbar-light">
      <% if current_user %>
        <a class="navbar-brand" href="/events">Welcome:</a>
      <% else %>
        <a class="navbar-brand" href="/events">Homepage</a>
      <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <% if current_user %>
                <li class="nav-item active">
                  <a class="nav-link" href="/logout">Logout</a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="/users/<%=current_user.id%>/edit">Edit Account</a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="/events/new">Create Event</a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="/all_events">Events Listing</a>
                </li>
              <% else %>
                <li class="nav-item active">
                  <a class="nav-link" href="/login">Login</a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="/users/new">New User?</a>
                </li>
                <% if current_user %>
                  <li class="nav-item active">
                    <a class="nav-link" href="/users/new">New User?</a>
                  </li>
                <% end %>
              <% end %>
            </ul>
      </div>
    </nav>

    <% flash.each do |name, message| %>
      <div class="alert alert-<%=name%> alert-dimissable fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
        <%= message %>
      </div> 
    <% end %>


    <div class="container">

    <%= yield %>
  </body>
</html>
